# AIO 分析器 Django 環境配置範例
# =====================================
# 將此文件複製為 .env 並填入實際的值

# Django 設定
DJANGO_SECRET_KEY=your-very-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 數據庫設定
DB_ENGINE=django.db.backends.postgresql
DB_NAME=aio_analyzer
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis 設定
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google OAuth 設定
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SERP API 設定 (推薦使用 Serper)
SERP_API_PROVIDER=serper
SERP_API_KEY=your-serper-api-key
SERP_API_ENDPOINT=https://google.serper.dev/search

# 或者使用 SerpApi
# SERP_API_PROVIDER=serpapi
# SERP_API_KEY=your-serpapi-key
# SERP_API_ENDPOINT=https://serpapi.com/search.json

# 效能設定
DEFAULT_RATE_LIMIT=10
MAX_CONCURRENT_REQUESTS=5
REPORTS_STORAGE_DAYS=30

# 日誌設定
LOG_LEVEL=INFO

# 郵件設定
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=AIO 分析器 <noreply@your-domain.com>

# 靜態文件設定
STATIC_URL=/static/
MEDIA_URL=/media/

# 安全設定
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=None

# Sentry 錯誤追蹤 (可選)
SENTRY_DSN=your-sentry-dsn-here

# 第三方服務
GOOGLE_ANALYTICS_ID=your-ga-id
